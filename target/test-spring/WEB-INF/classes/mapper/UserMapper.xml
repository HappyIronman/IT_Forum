<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.ironman.forum.dao.UserDAO">
    <select id="getMomentInfoById" parameterType="java.lang.Long" resultType="com.ironman.forum.entity.User">
        select unique_id, username, profile from user where id = #{id}
    </select>
    <update id="changeMomentNum">
        update user set moment_num = moment_num
        <if test="isIncrement">
            +1
        </if>
        <if test="!isIncrement">
            -1
        </if>
        where id = #{userId}
    </update>
</mapper>
